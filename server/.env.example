# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pesitm_cse_portal
DB_USER=postgres
DB_PASSWORD=your_postgres_password

# JWT Configuration for Admin Authentication
JWT_SECRET=pesitm-cse-admin-secret-key-2024-very-secure
JWT_EXPIRY=24h

# MongoDB Configuration (if still needed for other data)
MONGODB_URI=mongodb://localhost:27017/pesitm-cse
