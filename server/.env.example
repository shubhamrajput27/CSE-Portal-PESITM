# Server Configuration
PORT=5000
NODE_ENV=development

# Email Configuration (for contact form and password reset OTP)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
